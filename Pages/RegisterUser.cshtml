@page
@model AplicatieInterviu.Pages.RegisterUserModel
@{
    ViewData["Title"] = "Înregistrare Utilizator";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f7f7f7;
    }

    .form-container {
        max-width: 400px;
        margin: 80px auto;
        padding: 30px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
        margin-bottom: 25px;
    }

    form div {
        margin-bottom: 15px;
    }

    label {
        display: block;
        margin-bottom: 6px;
        font-weight: bold;
    }

    input[type="text"],
    input[type="email"],
    input[type="password"] {
        width: 100%;
        padding: 8px;
        box-sizing: border-box;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    button[type="submit"] {
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        color: white;
        font-weight: bold;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        button[type="submit"]:hover {
            background-color: #0056b3;
        }

    .error-message {
        color: red;
        text-align: center;
    }
</style>

<div class="form-container">
    <h2>Înregistrare Utilizator</h2>

    <form method="post">
        <div>
            <label>Nume</label>
            <input type="text" asp-for="User.Nume" required />
        </div>
        <div>
            <label>Prenume</label>
            <input type="text" asp-for="User.Prenume" required />
        </div>
        <div>
            <label>Email</label>
            <input type="email" asp-for="User.Email" required />
        </div>
        <div>
            <label>Telefon</label>
            <input type="text" asp-for="User.Phone" />
        </div>
        <div>
            <label>Parola</label>
            <input type="password" asp-for="Parola" required />
        </div>
        <div>
            <label>Companie</label>
            <input type="text" value="@Model.CompanieName" disabled />
            <input type="hidden" name="CompanieName" value="@Model.CompanieName" />
        </div>
        <div>
            <button type="submit">Înregistrează-te</button>
        </div>

        @if (!string.IsNullOrEmpty(Model.Mesaj))
        {
            <p class="error-message">@Model.Mesaj</p>
        }
    </form>
</div>
