@page
@model AplicatieInterviu.Pages.UserDashboardModel
@{
    ViewData["Title"] = "User Dashboard";
}

<style>
    .logout-container {
        display: flex;
        justify-content: flex-end;
        padding: 10px 20px;
    }

    .logout-button {
        background-color: #dc3545;
        color: white;
        border: none;
        padding: 8px 16px;
        border-radius: 4px;
        cursor: pointer;
        font-weight: bold;
    }

    .center-table {
        margin: 40px auto;
        border-collapse: collapse;
        width: 50%;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        font-family: Arial, sans-serif;
    }

    .center-table th, .center-table td {
        border: 1px solid #ddd;
        padding: 12px 20px;
        text-align: left;
    }

    .center-table th {
        background-color: #007bff;
        color: white;
    }
</style>

<div class="logout-container">
    <form method="post" asp-page-handler="Logout">
        <button type="submit" class="logout-button">Logout</button>
    </form>
</div>

<h2 style="text-align:center;">Date Personale</h2>

<table class="center-table">
    <tr>
        <th>Nume si Prenume</th>
        <td>@Model.Utilizator.Nume @Model.Utilizator.Prenume</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Model.Utilizator.Email</td>
    </tr>
    <tr>
        <th>Telefon</th>
        <td>@Model.Utilizator.Phone</td>
    </tr>
    <tr>
        <th>Companie</th>
        <td>@Model.Companie.Name</td>
    </tr>
</table>
